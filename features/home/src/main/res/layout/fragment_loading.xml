<?xml version="1.0" encoding="utf-8"?>
<io.supercharge.shimmerlayout.ShimmerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmerlayout_loading"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_animation_duration="1200"
    tools:context="app.zendoo.feature.dashboard.home.ui.loading.LoadingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_loading_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:foreground="@drawable/skeleton"
            android:maxLines="2"
            android:text="@string/start_title"
            app:layout_constraintBottom_toTopOf="@id/textview_loading_subtitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview_loading_subtitle"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:foreground="@drawable/skeleton"
            android:maxLines="2"
            android:text="@string/start_subtitle"
            app:layout_constraintBottom_toTopOf="@id/progressbar_loading"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview_loading_title" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progressbar_loading"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:foreground="@drawable/skeleton"
            android:progress="80"
            app:layout_constraintBottom_toTopOf="@id/imageview_loading_cutiepie"
            app:layout_constraintEnd_toEndOf="@+id/imageview_loading_cutiepie"
            app:layout_constraintStart_toStartOf="@+id/imageview_loading_cutiepie"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageview_loading_cutiepie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:foreground="@drawable/skeleton"
            android:src="@drawable/ic_cutiepie"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressbar_loading" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_margin="2dp"
            android:foreground="@drawable/skeleton"
            android:text="@string/all_start"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageview_loading_cutiepie" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</io.supercharge.shimmerlayout.ShimmerLayout>
