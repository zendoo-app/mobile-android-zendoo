<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.loading.LoadingFragment">

    <data>

        <import type="androidx.lifecycle.LiveData" />

        <import type="app.zendoo.feature.dashboard.home.ui.entity.HomeViewEntity" />

        <variable
            name="viewModel"
            type="LiveData&lt;HomeViewEntity>" />

    </data>

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/shimmerlayout_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shimmer_animation_duration="1200">

        <include
            layout="@layout/include_fragment"
            app:viewModel="@{viewModel}" />

    </io.supercharge.shimmerlayout.ShimmerLayout>

</layout>
